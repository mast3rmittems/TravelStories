<% layout('layouts/boilerplate')%>
    <div class="container">
    <h1>All Stories!</h1>
    <link rel="stylesheet" href="/stylesheets/index.css">
     
    <div class="card-container">
    <% for (let story of stories){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (story.images.length) { %>
                        <img crossorigin="anonymous" class="img-fluid" alt="" src="<%=story.images[0].url%>">
                        <% } else { %>
                            <img class="img-fluid" alt=""
                                src="https://res.cloudinary.com/dxi8uuyh5/image/upload/v1695140517/cld-sample-2.jpg">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= story.title %>
                        </h5>
                        <p class="card-text">
                            <%= story.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= story.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/stories/<%= story._id%>">View <%= story.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
            </div>

            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const stories = {features: <%-JSON.stringify(stories)%>}
            </script>

            <script src="/javascripts/clusterMap.js"></script>